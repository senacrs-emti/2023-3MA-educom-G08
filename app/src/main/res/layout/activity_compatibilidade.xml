<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompatibilidadeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMPATIBILIDADE"
            android:layout_above="@id/spinner1"/>

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />


        <TextView
            android:id="@+id/podeDoar"
            android:layout_below="@id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PODE DOAR PARA: " />
        <TextView
            android:id="@+id/podeReceber"
            android:layout_below="@id/podeDoar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PODE RECEBER DE: " />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>